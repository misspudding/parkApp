.bind-phone-number-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0;
}

.phone-number-input-view {
  display: flex;
  flex-direction: row;
  width: 650rpx;
  height: 80rpx; 
  border-radius: 50rpx;
  background-color: #f3f4f5;
  margin-top: 160rpx;
  margin-left: 50rpx;
}

.number {
  margin-left: 50rpx;
  color: #383838;
  font-size: 32rpx;
  float:left;
  line-height:80rpx;
}

.input-phoneNumber {
  font-size: 28rpx;
  margin-left: 50rpx;
  display:block;
  float:left;
  height:80rpx;
  line-height:80rpx;
  color:#383838;
}

.verification {
  display: flex;
  flex-direction: row;
}

.verification-code-input-view {
  width: 410rpx;
  height: 80rpx;
  border: 1px solid #f3f4f5;
  border-radius: 50rpx;
  background-color: #f3f4f5;
  margin-top: 40rpx;
  margin-left: 50rpx;
}

.verification-btn {
  border: 1px solid #2084fe;
  height: 80rpx;
  width: 220rpx;
  border-radius: 50rpx;
  line-height: 80rpx;
  text-align: center;
  margin-left: 20rpx;
  color: #2084fe;
  box-sizing: border-box;
  font-size: 28rpx;
  margin-top:40rpx;
  background:#fff;
}
.verification-btn:after{
  border:none;
}
.view-verification {
  width: 200rpx;
  border: 1px solid #eee;
  background-color: blue;
  border-radius: 50rpx;
}

.accredit-view {
  height: 80rpx;
  margin-left: 250rpx;
  line-height: 80rpx;
  margin-top: 40rpx;

}

.wechat-img {
  width: 37rpx;
  height: 30rpx;
  float:left;
  margin-top:26rpx;
}

.accredit-text {
  font-size: 28rpx;
  display: inline;
  border: none;
  background:#fff;
}
.accredit-text:after {
  border:none;
}

.affirm-checkbox {
  margin-top: 20rpx;
  zoom:60%;
  text-align: center;

}
.explain{
  padding-left:10rpx;
}
.explain text{
  color:#2084fe;
}
.submit-view {
  width: 650rpx;
  height: 80rpx;
  display:block;
  border-radius: 50rpx;
  background: linear-gradient(to left, #6ebdff, #2085fe);
  line-height: 80rpx;
  text-align: center;
  color: white;
  margin: 15rpx auto 15rpx auto;
  font-size: 32rpx;
}
.explain{
  font-size: 40rpx;
}
