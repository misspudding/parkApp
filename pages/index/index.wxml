<!--index.wxml-->
<view class="index-box">
  <view class="container-index">
    <view class="userinfo">
      <view class="userinfo-t">
        <image catchtap='openUserInfo' class="userinfo-avatar" src='../../resource/images/peo.png' mode="cover"></image>
        <view class="balance">
          <text class="balance-tit">账户余额</text>
          <text class="balance-info"><text>￥</text>200.5</text>
        </view>
      </view>
      <!--按钮开始-->
      <view class="btn">
        <text class="coupon">优惠券</text>
        <text bindtap='rechargeMoney'>充值</text>
      </view>
      <!--按钮结束-->
    </view>
  </view>

  <view class='container-card'>
    <view class='scan-QrCode' bindtap='rouseQR'>
      <image src='../../resource/images/pic.png'></image>
    </view>
    <view class='card'>
      <view class="part">
        <view class="card-info">
          <view class="card-pic">
            <image src='../../resource/images/card.png'></image>
          </view>
          <text class="num"><text>粤G</text>
          <text class="pointer"></text>
          <text>DY910</text></text>
          <text class="month">停车月卡</text>
        </view>
        <text class="adress">湛江市保利原点外围停车场</text>
        <text class="time">有效期至<text>2018.8.30</text></text>
      </view>
    </view>
  </view>

  <view class='parking-tip'>
    <view catchtap='openCallAdmin' class='parking-icon'>
      <image src='../../resource/images/customer.png'></image>
    </view>
    <view catchtap='openMoreParking' class='parking-text'>
      <image src='../../resource/images/moreParking.png'></image>
    </view>
  </view>
<!--无牌车已缴费-->
  <view class="already-pay">
    <image class="already" src='../../resource/images/already-pay.png'></image>
    <view class="info">
      <image src='../../resource/images/carManage-no.png'></image>
      <text>无车牌</text>
    </view>
    <text class="adress">湛江市保利原景外围停车场</text>
    <text class="tips">请在离场时扫描出口二维码</text>
    <view class="before">
      <text class="font">请在<text>15:30</text>前离场，逾期重新开始计费</text>
      <image src='../../resource/images/link.png'></image>
    </view>
  </view>
  <!--无牌车开始停车-->
  <view class="already-pay">
    <view class="info">
      <image src='../../resource/images/carManage-no.png'></image>
      <text>无车牌</text>
    </view>
    <text class="adress">湛江市保利原景外围停车场</text>
    <view class="car">
      <image src='../../resource/images/car.png'></image>
      <text>开始停车</text>
    </view>
    <view class="before">
      <image src='../../resource/images/link.png'></image>
    </view>
  </view>
  <!--无牌车缴费离开-->
  <view class="already-pay">
    <view class="info">
      <image src='../../resource/images/carManage-no.png'></image>
      <text>无车牌</text>
      <text class="longtime">已停车<text>1小时25分</text></text>
    </view>
    <text class="adress">湛江市保利原景外围停车场</text>
    <view class="car">
      <image src='../../resource/images/car-leave.png'></image>
      <text>缴费离开</text>
    </view>
    <view class="before">
      <image src='../../resource/images/link.png'></image>
    </view>
  </view>
</view>