.forget-con {
  width: 690rpx;
  margin: 0 auto;
  padding-top:20rpx;
}

.forget-con .item {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 8rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  position: relative;
}

.forget-con .item input {
  display: block;
  padding: 0 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color:#383838;
}

.forget-con .item .verification-btn {
  width: 187rpx;
  height: 88rpx;
  line-height: 88rpx;
  position: absolute;
  right: 0;
  top: 0;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  z-index:999;
  border-radius:0 8rpx 8rpx 0;
}

.forget-con .item .verification-btn:after {
  border: none;
}

.forget-con .btn {
  width: 100%;
  background: linear-gradient(to left, #6fbeff, #1f84fe);
  border-radius: 8rpx;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border: none;
  text-align: center;
  margin: 60rpx auto 70rpx auto;
}
.forget-con .tips{
  overflow:hidden;
  margin-top:20rpx;
}
.forget-con .tips image{
  width:28rpx;
  height:28rpx;
  float:left;
  padding-top:8rpx;
}
.forget-con .tips text.info{
  display:block;
  font-size: 26rpx;
  line-height:40rpx;
  margin-left:50rpx;
  color:#666;
}